---
import '@fontsource-variable/jost';
interface Props {
	title: string;
}

const { title } = Astro.props;
import Noise from '@/components/Noise.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Evnto de boxeo entre streamers y creadores de contenido organizado por Ibai LLanos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Noise />
		<div class="max-w-6xl lg:px-10 pt-32 mx-auto">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: "Jost Variable", system-ui, sans-serif;
		background: #ddd;
	}
</style>
